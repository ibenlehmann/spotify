---
import Cards from "./Cards.astro";
const { title, link } = Astro.props;
---

<section title="Albums">
  <h2>Albums</h2>
  <Cards
    title="Album 1"
    img="https://via.assets.so/album.png?id=6&q=95&w=360&h=360&fit=fill"
  />
  <Cards
    title="Album 2"
    img="https://via.assets.so/album.png?id=7&q=95&w=360&h=360&fit=fill"
  />
  <Cards
    title="Album 3"
    img="https://via.assets.so/album.png?id=8&q=95&w=360&h=360&fit=fill"
  />
  <Cards
    title="Album 4"
    img="https://via.assets.so/album.png?id=9&q=95&w=360&h=360&fit=fill"
  />
  <Cards
    title="Album 5"
    img="https://via.assets.so/album.png?id=10&q=95&w=360&h=360&fit=fill"
  />
</section>

<article>
  <h2>Artist</h2>
  <Cards
    title="Kunstner 1"
    img="https://via.assets.so/album.png?id=1&q=95&w=360&h=360&fit=fill"
    shape="round"
  />
  <Cards
    title="Kunstner 2"
    img="https://via.assets.so/album.png?id=2&q=95&w=360&h=360&fit=fill"
    shape="round"
  />
  <Cards
    title="Kunstner 3"
    img="https://via.assets.so/album.png?id=3&q=95&w=360&h=360&fit=fill"
    shape="round"
  />
  <Cards
    title="Kunstner 4"
    img="https://via.assets.so/album.png?id=4&q=95&w=360&h=360&fit=fill"
    shape="round"
  />
  <Cards
    title="Kunstner 5"
    img="https://via.assets.so/album.png?id=5&q=95&w=360&h=360&fit=fill"
    shape="round"
  />
</article>

<section class="section">
  <header>
    <h2 class="section_title">{title}</h2>
    <a href={link}>Vis alle</a>
  </header>
  <div class="section_content">
    <slot />
  </div>
</section>

<style>
  html {
    color: white;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .section_content {
    display: grid;
    grid-auto-columns: 100px;
    grid-auto-flow: column;
    gap: 1rem;
    overflow-x: auto;
  }
  article {
    display: flex;
    gap: 10px;
  }
</style>
